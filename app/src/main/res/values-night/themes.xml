<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoteEx" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorNoteColor2</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Search View Text  -->
    <style name="SearchAutoCompleteTextView" parent="ThemeOverlay.Material3.AutoCompleteTextView">
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="SearchTheme" parent="Theme.NoteEx">
        <item name="android:queryHint">@string/search_notes</item>
        <item name="android:autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
    </style>


</resources>